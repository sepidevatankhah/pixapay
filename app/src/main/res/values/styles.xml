<resources>
    
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    
    <style name="AppTheme.TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/campton_book</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="AppTheme.HeaderTextStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/campton_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    
    <style name="SplashTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">@font/campton_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="AppTheme.Splash" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
